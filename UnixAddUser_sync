#!/usr/local/bin/zsh
cd /TopStor
web='/var/www/html/des20/Data/Usersstatus.log';
logging='/var/www/html/des20/Data/currentinfo2.log';
txtres='/TopStordata/'`basename $0`'.txt'
rm -rf $txtres &>/dev/null
glog='/var/www/html/des20/Data/TopStor.log';
username=`echo $@ | awk '{print $1}'`;
pas=`echo $@ | awk '{print $2}'`;
userid=`echo $@ | awk '{print $3}'`;
userpass=`echo $pas | openssl enc -d -base64 -aes-256-ctr -nopad -nosalt -k '#skMe22'$username`;
userreq='system';
myhost=`hostname -s`
privilege="Box_Users";
contrun=`./privthis.sh $privilege $userreq`;
if [[ $contrun == 'true' ]]
then
useradd -c"TopStor"$pas -M -u $userid -p $userpass -s /usr/sbin/nologin $username 2> $txtres
#ln -s /p$myhost/$username /home/$username
#chmod o-rwx /p$myhost/$username -R
( echo $userpass; echo $userpass) | /bin/smbpasswd -s -a $username 2>> $txtres
cat $txtres
#mkdir -p /Data/Common/$username;
#chown $username /Data/Common/$username;
 echo $userpass > key/${username}fixed
 gpg -u "QuickStor" -r"QuickStor" key/${username}fixed
 chmod 400 key/${username}fixed.gpg;
 rm -rf key/${username}fixed
fi
cd /pace
