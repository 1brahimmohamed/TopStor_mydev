#!/bin/sh
echo $@ > /root/snapnowparam
cd /TopStor
web='/var/www/html/des20/Data/statusglobal.log';
txtres='/TopStordata/'`basename $0`$userreq'.txt'
myhost=$myhost;
vol=`echo $@ | awk '{print $1}'| awk -F '/' '{print $1}'`;
name=`echo $@ | awk '{print $1}' | awk -F '/' '{print $2}'`;
pool=`echo $@ | awk '{print $2}'`;
stamp=`date +%s`;
echo /sbin/zfs snapshot $pool/$vol@${name}.$stamp
/sbin/zfs snapshot $pool/$vol@${name}.$stamp
if [ $? -ne 0  ]; then
        echo failed
        exit 1;
else 
timenow=`/usr/bin/date`
echo OK;
exit 0
fi;
