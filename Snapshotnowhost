if [ $? -ne 0 ]; then echo host not owner; exit; fi
/TopStor/logqueue.py `basename "$0"` running system &
  res=`./Snapshotnow $@`
#  /TopStor/logmsg.py Snap1045 error $userreq $newsnap 
